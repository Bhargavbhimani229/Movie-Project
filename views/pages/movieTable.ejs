<%- include('../partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-3">Movie List</h5>
          <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
              <thead class="table-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Movie Name</th>
                  <th scope="col">Thumbnail</th>
                  <th scope="col">Description</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% movies.forEach((movie, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= movie.movieName %></td>
                    <td>
                      <img src="<%= movie.thumbnail %>" alt="<%= movie.movieName %>" class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                    </td>
                    <td><%= movie.description %></td>
                    <td class="w-25">
                      <a href="/movie/delete/<%= movie.id %>" class="btn btn-danger btn-sm me-2">Delete</a>
                      <a href="/movie/<%= movie.id %>" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

        <%- include('../partials/footer') %>
