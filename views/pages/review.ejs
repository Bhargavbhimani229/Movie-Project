<%- include('../partials/clientHeader') %>

<main class="main-content">
  <div class="container">
    <div class="page">
      <div class="breadcrumbs">
        <a href="/client">Home</a>
        <span>Movie Review</span>
      </div>

      <div class="filters">
        <select name="#" id="#" placeholder="Choose Category">
          <option value="#">Action</option>
          <option value="#">Comedy</option>
          <option value="#">Drama</option>
          <option value="#">Thriller</option>
        </select>
        <select name="#" id="#">
          <option value="#">2023</option>
          <option value="#">2024</option>
          <option value="#">2025</option>
        </select>
      </div>

      <div class="breadcrumbs mt-5">
        <div class="row justify-content-center">
          <% movies.forEach(movie => { %>
            <div class="col-12 mb-4">
              <div class="card shadow border-0 rounded-3 d-flex align-items-center p-5" style="display: flex; flex-direction: row; padding: 20px;">
                
                <!-- Left Side: Movie Image -->
                <div class="movie-image" style="flex: 0 0 200px; max-width: 200px;">
                  <img src="/<%= movie.thumbnail %>" 
                       alt="<%= movie.movieName %>" 
                       class="img-fluid rounded" 
                       style="width: 100%; height: 150px; object-fit: cover; border-radius: 10px;">
                </div>
                
                <!-- Right Side: Movie Details (Always Next to Image) -->
                <div class="movie-details ms-4" style="flex: 1;">
                  <h5 class="fw-bold">
                    <a href="/<%= movie.id %>" class="text-decoration-none text-dark " style="font-size: x-large;  margin-left: 15px; color:rgba(0, 0, 0, 0.711) ;">
                      <%= movie.movieName %>
                    </a>
                  </h5>
      
                  <!-- Movie Description (Fixed Height & No Overflow) -->
                  <p class="text-muted mb-2" style="height: auto; overflow: hidden; text-overflow: ellipsis;  margin-left: 15px;">
                    <%= movie.description %>
                  </p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
      
      
      <!-- .movie-list -->

      <div class="pagination">
        <a href="#" class="page-number prev"
          ><i class="fa fa-angle-left"></i
        ></a>
        <span class="page-number current">1</span>
        <a href="#" class="page-number">2</a>
        <a href="#" class="page-number">3</a>
        <a href="#" class="page-number">4</a>
        <a href="#" class="page-number">5</a>
        <a href="#" class="page-number next"
          ><i class="fa fa-angle-right"></i
        ></a>
      </div>
    </div>
  </div>
  <!-- .container -->
</main>
			<%- include('../partials/clientFooter') %>
	